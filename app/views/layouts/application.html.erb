<!DOCTYPE html>
<html>
<head>
  <title>FoodProj</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="shortcut icon" href="http://transitionculture.org/wp-content/uploads/potato.jpg">
  <link href='https://fonts.googleapis.com/css?family=Oxygen:700|Amaranth:700|Scada:700|Alegreya+Sans+SC:700|Overlock:900|Sarala:700' rel='stylesheet' type='text/css'>
</head>

<body>
	<div class="header">
		<ul>
			<% if current_user %>
				<li>
					<%= link_to "Home", root_path %>
				</li>
				<li>
					<%= link_to "Sign Out", destroy_user_session_path, :method => :delete %>
				</li>
				<li>
					<%= link_to "Create Profile", new_profile_path %>
				</li>
				<li>
					<%= link_to "Food Community", profiles_path %>
				</li>
				<li>
					<%= link_to "Search Recipes", recipes_path %>
				</li>
				<li>
					<%= link_to "Create a Recipe", new_recipe_path %>
				</li>	
			<% else %>
				<li>
					<%= link_to "Home", root_path %>
				</li>
				<li>
					<%= link_to "Sign Up", new_user_registration_path %>
				</li>
				<li>
					<%= link_to "Sign In", new_user_session_path %>
				</li>
				<li>
					<%= link_to "Search Recipes", recipes_path %>
				</li>
			<% end %>
		</ul>
	</div>

	<% if flash[:notice] %>
		<div class="alert alert-success"><%= flash[:notice] %></div>
	<% end %>

	<% if flash[:alert] %>
		<div class="alert alert-warning"><%= flash[:alert] %></div>
	<% end %>

	<%= yield %>

</body>
</html>
