
<div class="edit-profile">
	<div class="profile-form">

		<h1>Update Your Profile!</h1>

		<%= form_for @profile, 
		:url => @profile, 
		:html => { :multipart => true } do |f| %>   
			<div class="field">
				<p>
					<%= f.label :username %><br>
					<%= f.text_field :username %>
				</p>

				<p>
					<%= f.label :fname %><br>
					<%= f.text_field :fname %>
				</p>

				<p>
					<%= f.label :lname %><br>
					<%= f.text_field :lname %>
				</p>

				<p>
					<%= f.label :email %><br>
					<%= f.text_field :email %>
				</p>

				<p>
					<%= f.file_field :avatar %> 
				</p>
			</div>
			<p>
				<%= f.label :birthdate %><br>
				<%= f.date_select :birthdate, :start_year=>1900 %>
			</p>

			<p>
				<%= f.label :bio %><br>
				<%= f.text_area :bio %>
			</p>
			<div class="actions">
				<p>
					<%= f.submit %>
				</p>
			</div>
			<p>
				<%= link_to "Cancel", @profile %>
			</p>
		<% end %>
		<span>
			<%=link_to "Delete My Account", edit_user_registration_path, method: :delete, data: {confirm: "Permanently delete this account?"} %>
		</span>

	</div>
</div>

