<div class="edit-recipe">
	<div class="recipe-form">
		<h1>Edit Your Recipe!</h1>
		<br>
		<%= form_for @recipe, 
		:url => @recipe,
		:html => {:multipart =>true} do |f|%>
			<div class="field">
				<%= f.label :recipeName%><br>
				<%= f.text_field :recipeName%><br>
				<%= f.label :source %><br>
				<%= f.text_field :source %><br>
				<%= f.label :url %><br>
				<%= f.text_field :url %><br>
				<%= f.label :course %><br>
				<%= f.text_field :course %><br>
				<%= f.label :cuisine %><br>
				<%= f.text_field :cuisine %><br>
				<%= f.label :time %><br>
				<%= f.text_field :time %><br>
				<%= f.label :yield %><br>
				<%= f.text_field :yield %><br>
			</div>
			<%= f.label :ingredients%><br>
			<%= f.text_area :ingredients%><br>
			<%= f.label :instructions%><br>
			<%= f.text_area :instructions%><br>
			<%= f.file_field :avatar %><br>
			<div class="actions">
				<%= f.submit :update, data: {disable_with: "Submitting..."} %>
			</div>
		<% end %>
	</div>
</div>