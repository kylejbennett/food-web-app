
<h1>Search Recipes</h1>

<%= form_tag "/recipes/search", method: :post do %>
	<%= text_field_tag :term, @term, :placeholder => "Enter recipe search term here", size: 30 %>
	<%= submit_tag "Search", class: "sub_form" %>
<% end %>

<div class="content">

	<% if @term %>

		Recipe search powered by <a href='http://www.yummly.com/recipes'><img alt='Yummly' src='http://static.yummly.com/api-logo.png'/></a>

		<div class="results">
			<% @recipes.each do |recipe| %>
				<div class="recipe">
					<%= image_tag recipe['image'] %>
					<h3><%= link_to recipe['name'], recipe['url'], :target=>"blank" %></h3>
					<h4><%= recipe['source'] %></h4>
					<p>Course: <%= recipe['course'] %></p>
					<p>Rating: <%= recipe['rating'] %> Stars</p>
					<p>Total Cook Time: <%= recipe['time'] %> - Yield: <%= recipe['yield'] %></p>
				</div>
				<br>
			<% end %>
		</div>
	<% end %>

	<div class="clear"></div>

</div>

